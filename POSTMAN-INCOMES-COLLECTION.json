{
  "info": {
    "name": "Planwise - Receitas",
    "description": "Collection para testes de receitas do Planwise",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Criar Receita",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Salário do mês\",\n  \"value\": 5000.00,\n  \"date\": \"2024-01-15\",\n  \"categoryId\": {{categoryId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/incomes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes"]
        }
      }
    },
    {
      "name": "Listar Todas as Receitas",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes"]
        }
      }
    },
    {
      "name": "Listar Receitas por Categoria",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/category/{{categoryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "category", "{{categoryId}}"]
        }
      }
    },
    {
      "name": "Listar Receitas por Período",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/date-range?startDate=2024-01-01&endDate=2024-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "date-range"],
          "query": [
            {
              "key": "startDate",
              "value": "2024-01-01"
            },
            {
              "key": "endDate",
              "value": "2024-01-31"
            }
          ]
        }
      }
    },
    {
      "name": "Buscar Receita por ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "1"]
        }
      }
    },
    {
      "name": "Atualizar Receita",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Salário do mês - Atualizado\",\n  \"value\": 5500.00,\n  \"date\": \"2024-01-15\",\n  \"categoryId\": {{categoryId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/incomes/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "1"]
        }
      }
    },
    {
      "name": "Buscar Receitas por Texto",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/search?search=salário",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "search"],
          "query": [
            {
              "key": "search",
              "value": "salário"
            }
          ]
        }
      }
    },
    {
      "name": "Total de Receitas",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/total",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "total"]
        }
      }
    },
    {
      "name": "Total de Receitas por Período",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/total/date-range?startDate=2024-01-01&endDate=2024-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "total", "date-range"],
          "query": [
            {
              "key": "startDate",
              "value": "2024-01-01"
            },
            {
              "key": "endDate",
              "value": "2024-01-31"
            }
          ]
        }
      }
    },
    {
      "name": "Deletar Receita",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/incomes/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "incomes", "1"]
        }
      }
    }
  ]
}
