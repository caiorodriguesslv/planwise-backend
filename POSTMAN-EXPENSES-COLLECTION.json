{
  "info": {
    "name": "Planwise - Despesas",
    "description": "Collection para testes de despesas do Planwise",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "2",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Criar Despesa",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Supermercado\",\n  \"value\": 250.50,\n  \"date\": \"2024-01-15\",\n  \"categoryId\": {{categoryId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/expenses",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses"]
        }
      }
    },
    {
      "name": "Listar Todas as Despesas",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses"]
        }
      }
    },
    {
      "name": "Listar Despesas por Categoria",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/category/{{categoryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "category", "{{categoryId}}"]
        }
      }
    },
    {
      "name": "Listar Despesas por Período",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/date-range?startDate=2024-01-01&endDate=2024-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "date-range"],
          "query": [
            {
              "key": "startDate",
              "value": "2024-01-01"
            },
            {
              "key": "endDate",
              "value": "2024-01-31"
            }
          ]
        }
      }
    },
    {
      "name": "Buscar Despesa por ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "1"]
        }
      }
    },
    {
      "name": "Atualizar Despesa",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Supermercado - Atualizado\",\n  \"value\": 275.00,\n  \"date\": \"2024-01-15\",\n  \"categoryId\": {{categoryId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/expenses/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "1"]
        }
      }
    },
    {
      "name": "Buscar Despesas por Texto",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/search?search=supermercado",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "search"],
          "query": [
            {
              "key": "search",
              "value": "supermercado"
            }
          ]
        }
      }
    },
    {
      "name": "Total de Despesas",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/total",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "total"]
        }
      }
    },
    {
      "name": "Total de Despesas por Período",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/total/date-range?startDate=2024-01-01&endDate=2024-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "total", "date-range"],
          "query": [
            {
              "key": "startDate",
              "value": "2024-01-01"
            },
            {
              "key": "endDate",
              "value": "2024-01-31"
            }
          ]
        }
      }
    },
    {
      "name": "Deletar Despesa",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/expenses/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "expenses", "1"]
        }
      }
    }
  ]
}
