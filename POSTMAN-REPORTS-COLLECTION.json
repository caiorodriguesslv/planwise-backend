{
  "info": {
    "name": "Planwise - Relatórios",
    "description": "Collection para testes de relatórios do Planwise",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Resumo Financeiro Geral",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/financial-summary",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "financial-summary"]
        }
      }
    },
    {
      "name": "Resumo Financeiro por Período",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/financial-summary/date-range?startDate=2024-01-01&endDate=2024-01-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "financial-summary", "date-range"],
          "query": [
            {
              "key": "startDate",
              "value": "2024-01-01"
            },
            {
              "key": "endDate",
              "value": "2024-01-31"
            }
          ]
        }
      }
    },
    {
      "name": "Resumo de Metas",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/goals-summary",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "goals-summary"]
        }
      }
    },
    {
      "name": "Relatório Mensal",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/monthly-summary?year=2024&month=1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "monthly-summary"],
          "query": [
            {
              "key": "year",
              "value": "2024"
            },
            {
              "key": "month",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Relatório Anual",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/yearly-summary?year=2024",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "yearly-summary"],
          "query": [
            {
              "key": "year",
              "value": "2024"
            }
          ]
        }
      }
    }
  ]
}
