{
  "info": {
    "name": "Planwise - Usuários",
    "description": "Collection para testes de usuários do Planwise",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Listar Todos os Usuários",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Buscar Usuário por ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1"]
        }
      }
    },
    {
      "name": "Buscar Usuário Atual",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "me"]
        }
      }
    },
    {
      "name": "Atualizar Usuário",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva Atualizado\",\n  \"email\": \"joao.atualizado@email.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1"]
        }
      }
    },
    {
      "name": "Atualizar Usuário Atual",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva Atualizado\",\n  \"email\": \"joao.atualizado@email.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "me"]
        }
      }
    },
    {
      "name": "Alterar Senha",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"123456\",\n  \"newPassword\": \"123456789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/me/password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "me", "password"]
        }
      }
    },
    {
      "name": "Desativar Usuário",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/1/deactivate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1", "deactivate"]
        }
      }
    },
    {
      "name": "Ativar Usuário",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/1/activate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1", "activate"]
        }
      }
    },
    {
      "name": "Alterar Role do Usuário",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/1/role?role=ADMIN",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1", "role"],
          "query": [
            {
              "key": "role",
              "value": "ADMIN"
            }
          ]
        }
      }
    },
    {
      "name": "Deletar Usuário",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1"]
        }
      }
    }
  ]
}
